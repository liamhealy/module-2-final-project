<div>
    <h1>Make a comment:</h1>
</div>

<div>
    <% if flash[:errors] %>
        <p><%= flash[:errors].count %> error(s)</p>
        <ul>
            <% flash[:errors].each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>
</div>

<div>
    <%= form_with model: @comment, url: group_note_comments_path do |f| %>
        <%= f.label "Content: " %>
        <%= f.text_field :content %><br>
        <%= f.submit %>
    <% end %>
</div>