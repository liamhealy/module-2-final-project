    <div class="card-columns">
    <% @groups.each do |group| %>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"><%= link_to group.title, group_path(group) %></h4>
                <p class="card-text"><%= group.theme %></p>
                <p class="card-text"><%= pluralize group.users.count, 'User' %></p>
            </div>
        </div>
    <% end %>
