
    <%= form_for @user do |f| %>
    <%= f.label :username, "Name" %>
    <%= f.text_field :username %> <br>
    <p>This will be your unique username</p> 

    <%= f.label :age, "Age" %>
    <%= f.text_field :age %> <br> <br>
    <%= f.label :location, "Location" %>
    <%= f.text_field :location %> <br><br>

    <div>
        <%= f.label :bio, "Bio" %> <br>
        <%= f.text_area :bio %> <br>
    </div>
    <br>
    <%= f.submit %>
    <% end %>
</div>