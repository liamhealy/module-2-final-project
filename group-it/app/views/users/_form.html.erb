<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>
<%= form_for @user do |f| %>
    <%= f.label :username, "Name" %>
    <%= f.text_field :username %>
    <p>This will be your unique username</p> 

    <%= f.label :age, "Age" %>
    <%= f.text_field :age %> <br> <br>
    <%= f.label :location, "Location" %>
    <%= f.text_field :location %> <br><br>

    
        <%= f.label :bio, "Bio" %>
        <%= f.text_area :bio %> <br>
    <%= f.submit %>
    <% end %>
</div>