<div class="container text-center">
    <div class="text-center px-5">
        <div class="card">
            <div class="card-body">
                <h1>Join Group</h1>
                <h2>To join <%= @group.title %>, click "Join Group"</h2>
                <%= form_for @group_member do |f| %>
                    <%= f.submit "Join Group" %>
                <% end %>
            </div>
        </div>
    </div>
</div>